<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container1"
    android:background="#f0f0ef"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/trainroom2"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:background="@drawable/oval_shape"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:id="@+id/mSetWords3"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/mSetName"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:textSize="16dp"
                    style="@style/ButtonText" />
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:iiv_color="@android:color/holo_red_dark"
                    app:iiv_icon="gmd-keyboard-arrow-down"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fillViewport="true">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:layout_below="@+id/linearLayout"
                android:id="@+id/TrainViewLayout">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="200dp"
                        android:layout_margin="16dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/word_statistics"
                            android:id="@+id/tr_stat_text"
                            android:textSize="20dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="150dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/news"
                                    android:id="@+id/tr_new_text"
                                    android:textSize="18sp"
                                    android:layout_marginTop="50dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/wait"
                                    android:id="@+id/tr_wait_text"
                                    android:textSize="18dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="159dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/repeated"
                                    android:id="@+id/tr_prepare_text"
                                    android:textSize="18dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="159dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/finished"
                                    android:textSize="18dp"
                                    android:layout_margin="4dp"
                                    android:id="@+id/tr_finish_text" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="0"
                                    android:id="@+id/text_new_count"
                                    android:textSize="18dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="0"
                                    android:id="@+id/text_wait_count"
                                    android:textSize="18dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="0"
                                    android:id="@+id/text_prepare_count"
                                    android:textSize="18dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_margin="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="0"
                                    android:id="@+id/text_end_count"
                                    android:textSize="18dp"
                                    android:layout_marginTop="50dp"
                                    android:layout_margin="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/next_repeat"
                            android:id="@+id/tr_nexttime_text"
                            android:textSize="18dp"
                            android:layout_margin="4dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"></FrameLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:layout_alignTop="@+id/view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/train"
                            android:id="@+id/textView11"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/all"
                                android:id="@+id/btn_train_all"
                                android:layout_gravity="center_horizontal"
                                style="@style/ButtonText"
                                android:background="@drawable/yellowbutton"/>
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</LinearLayout>