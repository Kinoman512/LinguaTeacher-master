<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcd7f9"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/name"
                    android:id="@+id/textView"
                    android:layout_margin="9dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Your_language"
                    android:id="@+id/textView3"
                    android:layout_gravity="center"
                    android:layout_margin="9dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Learning_language"
                    android:id="@+id/textView4"
                    android:layout_margin="9dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="186dp"
                android:layout_height="265dp"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNameSet"
                    android:background="#ffffff"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="9dp"
                    android:minWidth="150dp"
                    android:maxLines="1"
                    android:minLines="1"
                    android:maxLength="15"
                    android:textCursorDrawable="@null"/>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f2ebb4"
                    android:id="@+id/groupSetWords2"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="9dp"
                    android:minWidth="150dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/tvGroup2"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:singleLine="true"
                        android:textSize="16dp" />
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:iiv_color="@android:color/holo_red_dark"
                        app:iiv_icon="gmd-keyboard-arrow-down"
                        android:layout_gravity="right"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f2ebb4"
                    android:id="@+id/groupSetWords3"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="9dp"
                    android:minWidth="150dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/tvGroup3"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:textSize="16dp" />
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:iiv_color="@android:color/holo_red_dark"
                        app:iiv_icon="gmd-keyboard-arrow-down"
                        android:layout_gravity="right"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>