<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_viewfont"
        style="@style/CardView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp">

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="5dp" />

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp" />

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check3"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp">

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="statusStage"
                    android:id="@+id/statusStage"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="errorText"
                    android:id="@+id/errorText"
                    android:visibility="invisible"
                    android:layout_weight="0.09"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="clip_vertical"
                android:orientation="horizontal">

                <org.ling.fragment.view.PopupMenuBotton
                    android:id="@+id/btn_popup_sound"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"

                    app:iiv_icon="gmd-volume-up" />

                <org.ling.fragment.view.PlaySoundBotton
                    android:id="@+id/btn_play_front"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    app:iiv_color="@android:color/holo_red_dark"
                    app:iiv_icon="gmd-volume-up"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/card_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:text="Карточка "
                    android:textSize="26dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="visible"
                    android:singleLine="true" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="clip_vertical"
                android:orientation="horizontal">

                <org.ling.fragment.view.PlaySoundBotton
                    android:id="@+id/btn_play_back2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="54dp"
                    app:iiv_color="@android:color/holo_red_dark"
                    app:iiv_icon="gmd-volume-up" />

                <TextView
                    android:id="@+id/card_word_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:text="Перевод2"
                    android:textSize="26dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:singleLine="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/trscTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:text="trn"
                    android:textSize="26dp"
                    android:layout_margin="8dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_viewback"
        style="@style/CardView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:orientation="horizontal">

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="5dp" />

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp" />

                <org.ling.fragment.view.CheckImage
                    android:id="@+id/check6"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="statusStage"
                    android:id="@+id/statusStage2"
                    android:layout_weight="0.66"
                    android:elevation="1dp"
                    android:width="40dp"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:id="@+id/imgWord"
                    android:layout_width="58dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.32"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:text="errors"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/errorText2"
                    android:visibility="invisible"
                    android:layout_weight="0.30"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="clip_vertical"
                android:orientation="horizontal">

                <org.ling.fragment.view.PopupMenuBotton
                    android:id="@+id/btn_popup_sound_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"

                    app:iiv_icon="gmd-volume-up" />

                <org.ling.fragment.view.PlaySoundBotton
                    android:id="@+id/btn_play_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"

                    app:iiv_icon="gmd-volume-up"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:id="@+id/card_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:text="Перевод"
                    android:textSize="26dp"
                    android:singleLine="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

                <org.ling.fragment.view.PlaySoundBotton
                    android:id="@+id/btn_play_back_from_front"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="34dp"
                    app:iiv_color="@android:color/holo_red_dark"
                    app:iiv_icon="gmd-volume-up"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:id="@+id/txtValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal|top"
                    android:text="Слово"
                    android:textSize="26dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>