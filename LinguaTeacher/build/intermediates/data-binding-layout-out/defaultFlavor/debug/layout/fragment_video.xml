<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/oval_shape"

            android:orientation="horizontal"
            android:padding="7dp">

            <RelativeLayout
                android:id="@+id/mVideoList"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mVideoNameText"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16dp" />

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    app:iiv_color="@color/orange"
                    app:iiv_icon="gmd-keyboard-arrow-down" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shadow_193236"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/videoThumb"
                    android:layout_width="265dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/camera"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Video"
                        android:id="@+id/txt_video"
                        android:singleLine="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:id="@+id/btn_select_video"
                        style="@style/ButtonText"
                        android:background="@drawable/greenbutton"
                        android:elevation="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Foreign Subtitle"
                        android:id="@+id/txt_fsub"
                        android:singleLine="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:id="@+id/btn_fsub"
                        style="@style/ButtonText"
                        android:background="@drawable/greenbutton" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Native Subtitle"
                        android:id="@+id/txt_nsub"
                        android:singleLine="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:id="@+id/btn_nsub"
                        style="@style/ButtonText"
                        android:background="@drawable/greenbutton" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:weightSum="1"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Sub"
                    android:id="@+id/btn_show"
                    style="@style/ButtonText"
                    android:background="@drawable/yellowbutton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play video"
                    android:id="@+id/btn_play_video"
                    style="@style/ButtonText"
                    android:background="@drawable/yellowbutton"
                    android:layout_weight="0.87" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:id="@+id/btn_delete_vid"
                    style="@style/ButtonText"
                    android:background="@drawable/yellowbutton" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>